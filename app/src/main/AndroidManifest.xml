<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tsofen.ourstory">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ourstory_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_ourstory_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".UserModel.ForgotPassword"></activity>
        <activity android:name=".UserModel.AppHomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserModel.LogIn" />
        <activity android:name=".UserModel.RegistrationPage1" />
        <activity android:name=".UserModel.RegistrationPage2" />
        <activity
            android:name=".StoryTeam.CreateStory"
            android:label="CreateStory"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".StoryTeam.ViewStory" />
        <activity android:name=".StoryTeam.SearchStory" />
        <activity android:name=".EditCreateMemory.CreateEditMemoryActivity" />
        <activity android:name=".TeamsHomePage.TeamsHomePg" />
        <activity android:name=".CommentActivity" />
        <activity
            android:name=".MemoriesOfStoryActivity"
            android:label="Memories" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>